        <Button
            android:id="@+id/pickUpImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scegli"
            android:backgroundTint="@color/verde_past"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:clickable="true"/>

        <Button
            android:id="@+id/uploadImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carica"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:clickable="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/quantum_grey"/>
        <!--
                <TextView
                    android:id="@+id/testoLuogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:text="Aggiungi la tua localizzazione"
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/placeSearch_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Place Search"/>
                -->

        <Button
            android:id="@+id/btnCaricaAnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crea_ann"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/verde_scuro"/>

    </LinearLayout>

</ScrollView>