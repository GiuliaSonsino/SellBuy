        <Button
            android:id="@+id/btnCaricaAnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crea_ann"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>