<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Titolo dell'oggetto in vendita -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titolo dell'annuncio"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/tv_venduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_error"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:paddingBottom="5dp"/>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/quantum_grey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/person"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/tv_autore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giorgio"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/tv_info_recensioni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recensioni utente"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:paddingBottom="5dp"
                android:clickable="true"
                android:focusable="true"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_call_24"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"/>


            <TextView
                android:id="@+id/tv_num_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5476933215"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:autoLink="phone"
                android:textColorLink="@color/verde_scuro" />


        </LinearLayout>

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icona_immagine"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icona_immagine"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icona_immagine"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/image4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icona_immagine"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginRight="5dp"/>

        </LinearLayout>


        <!-- Descrizione dell'annuncio -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIZIONE: "
                android:textSize="15sp"
                android:paddingStart="5dp"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrizione dell'annunciooooddhdh jdjdjdj dididididiid DKDDF"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingStart="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREZZO: "
                android:textSize="15sp"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="159"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¬"
                android:textSize="15sp"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONDIZIONI: "
                android:textSize="15sp"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nuovo"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CATEGORIA: "
                android:textSize="15sp"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giardinaggio"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LUOGO DI PROVENIENZA: "
                android:textSize="15sp"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/tv_luogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alessandria"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="5dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Il venditore"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingStart="5dp"/>

            <TextView
                android:id="@+id/tv_spedizione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ã¨ disposto"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a spedire"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/panna"
            android:shadowColor="@color/verde_past"
            android:text="Chiedi informazioni"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btnAcquista"
            android:backgroundTint="@color/verde_scuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acquista"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            />

    </LinearLayout>
</ScrollView>